<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".ui.player.activity.PlayerActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bottom_gradient"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/top_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_icon"
        android:background="@null"
        />
    <ImageButton
        android:id="@+id/actions_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="15sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:src="@drawable/three_dots"
        android:background="@null"
        />

    <ImageView
        android:id="@+id/track_image_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/sample_track_iamge"
        app:layout_constraintDimensionRatio="h,1:1"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back_btn" />
    <TextView
        android:layout_width="0dp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:id="@+id/track_title"
        app:layout_constraintEnd_toStartOf="@id/favorites_btn"
        tools:text="Big God"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/track_image_iv"
        app:layout_constraintBottom_toTopOf="@id/track_sub_text"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/open_sans_medium"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/track_image_iv"
        app:layout_constraintVertical_bias="1.0"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/favorites_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/favorite"
        app:layout_constraintEnd_toEndOf="@id/track_image_iv"
        app:layout_constraintBottom_toBottomOf="@id/track_title"/>

    <TextView
        android:layout_marginStart="10dp"
        android:textColor="@color/light_gray"
        android:fontFamily="@font/open_sans_medium"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/track_sub_text"
        tools:text="Florence + the Machine"
        app:layout_constraintTop_toBottomOf="@id/track_title"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="@id/track_image_iv"/>


    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:progress="30"
        android:progressDrawable="@drawable/seek_style"
        android:thumb="@drawable/custom_thumb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/play_btn"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current_position_tv"
        tools:text="0:00"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        app:layout_constraintStart_toStartOf="@id/seekbar"
        android:layout_marginStart="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_medium"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/duration_tv"
        tools:text="1:33"
        app:layout_constraintTop_toBottomOf="@id/seekbar"
        app:layout_constraintEnd_toEndOf="@id/seekbar"
        android:layout_marginEnd="15dp"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_medium"
        android:layout_marginTop="5dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pause_button"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@id/learn_the_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/skip_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skip"
        app:layout_constraintEnd_toStartOf="@id/play_btn"
        app:layout_constraintBottom_toTopOf="@id/learn_the_text_tv"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="30dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/skip_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/skip_forward"
        app:layout_constraintStart_toEndOf="@id/play_btn"
        app:layout_constraintBottom_toTopOf="@id/learn_the_text_tv"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="37dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shuffle"
        app:layout_constraintBottom_toTopOf="@id/learn_the_text_tv"
        android:layout_marginBottom="37dp"
        app:layout_constraintEnd_toStartOf="@id/skip_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginEnd="50dp"/>
    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/repeat"
        android:layout_marginBottom="37dp"
        app:layout_constraintBottom_toTopOf="@id/learn_the_text_tv"
        app:layout_constraintStart_toEndOf="@id/skip_forward"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="50dp"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/learn_the_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/learn_the_lyrics"
        android:textColor="@color/light_gray"
        android:fontFamily="@font/open_sans_medium"
        android:textSize="20sp"
        android:layout_marginBottom="25dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>